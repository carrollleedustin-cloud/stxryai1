# ================================================
# StxryAI Production Environment Variables
# ================================================
# Copy this file to .env.local for development
# Copy values to Netlify Environment Variables for production
# ================================================

# ================================================
# SUPABASE (REQUIRED)
# ================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.YOUR_SERVICE_ROLE_KEY

# Direct database connection (for migrations)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres

# ================================================
# APPLICATION URLs (REQUIRED)
# ================================================
NEXT_PUBLIC_APP_URL=https://stxryai.com
# For Netlify preview deployments, this is set automatically

# ================================================
# STRIPE PAYMENTS (REQUIRED for subscriptions)
# ================================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY

# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Create these in Stripe Products: https://dashboard.stripe.com/products
STRIPE_PREMIUM_PRICE_ID=price_YOUR_PREMIUM_MONTHLY_PRICE_ID
STRIPE_CREATOR_PRO_PRICE_ID=price_YOUR_CREATOR_PRO_MONTHLY_PRICE_ID

# ================================================
# AI SERVICES (REQUIRED for AI features)
# ================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY

# Optional: Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_API_KEY

# ================================================
# EMAIL SERVICE (REQUIRED for notifications)
# ================================================
# Option 1: SendGrid - https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@stxryai.com
EMAIL_FROM_NAME=StxryAI

# Option 2: Resend - https://resend.com/api-keys
# RESEND_API_KEY=re_YOUR_RESEND_API_KEY

# ================================================
# PUSH NOTIFICATIONS (Optional)
# ================================================
# Generate using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=YOUR_VAPID_PUBLIC_KEY
VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY
VAPID_EMAIL=mailto:admin@stxryai.com

# ================================================
# ANALYTICS (Recommended)
# ================================================
# PostHog - https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_YOUR_POSTHOG_PROJECT_KEY
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-YOUR_MEASUREMENT_ID

# ================================================
# ERROR TRACKING (Recommended)
# ================================================
# Sentry - https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_KEY@sentry.io/YOUR_PROJECT_ID

# ================================================
# CONTENT MODERATION (Optional)
# ================================================
# Google Perspective API - https://console.cloud.google.com/apis/api/commentanalyzer.googleapis.com
NEXT_PUBLIC_PERSPECTIVE_API_KEY=YOUR_PERSPECTIVE_API_KEY

# ================================================
# MONETIZATION (Optional)
# ================================================
# Google AdSense - https://www.google.com/adsense/
NEXT_PUBLIC_ADSENSE_CLIENT=ca-pub-YOUR_ADSENSE_CLIENT
NEXT_PUBLIC_ADSENSE_ID=YOUR_ADSENSE_SLOT_ID

# ================================================
# STORAGE BUCKETS
# ================================================
# These should match your Supabase storage bucket names
NEXT_PUBLIC_STORAGE_BUCKET=story-assets
NEXT_PUBLIC_COVER_IMAGES_BUCKET=cover-images
NEXT_PUBLIC_USER_AVATARS_BUCKET=user-avatars

# ================================================
# FEATURE FLAGS
# ================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_TTS=true

# ================================================
# OAUTH PROVIDERS (Optional - configure in Supabase)
# ================================================
# These are configured in Supabase Auth settings, not here
# Google: https://console.cloud.google.com/apis/credentials
# GitHub: https://github.com/settings/developers
# Discord: https://discord.com/developers/applications

# ================================================
# ENVIRONMENT IDENTIFICATION
# ================================================
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production
